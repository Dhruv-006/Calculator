<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="24dp">

    <!-- Display Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="16dp">

        <!-- Expression Display -->
        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textColor="#CCCCCC"
            android:textSize="28sp"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:ellipsize="start"
            android:includeFontPadding="false"
            android:padding="0dp" />

        <!-- Main Result Display -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="68sp"
            android:fontFamily="sans-serif-light"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="24sp"
            android:autoSizeMaxTextSize="48sp"
            android:includeFontPadding="false"
            android:padding="0dp" />
    </LinearLayout>

    <!-- Button Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Repeat for each row -->
        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnClear"
                style="@style/FunctionButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="AC"
                android:textSize="20sp"
                android:gravity="center" />

            <Button
                android:id="@+id/btnBackspace"
                style="@style/FunctionButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="⌫"
                android:textSize="20sp"
                android:gravity="center" />

            <Button
                android:id="@+id/btnPercent"
                style="@style/FunctionButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="%"
                android:textSize="24sp"
                android:gravity="center" />

            <Button
                android:id="@+id/btnDivide"
                style="@style/OperatorButton"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="÷"
                android:textSize="28sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Row 2: 7 8 9 × -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button android:id="@+id/btn7" style="@style/NumberButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:layout_marginEnd="8dp" android:text="7" android:gravity="center" />

            <Button android:id="@+id/btn8" style="@style/NumberButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:layout_marginEnd="8dp" android:text="8" android:gravity="center" />

            <Button android:id="@+id/btn9" style="@style/NumberButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:layout_marginEnd="8dp" android:text="9" android:gravity="center" />

            <Button android:id="@+id/btnMultiply" style="@style/OperatorButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:text="×" android:textSize="28sp" android:gravity="center" />
        </LinearLayout>

        <!-- Row 3: 4 5 6 − -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button android:id="@+id/btn4" style="@style/NumberButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:layout_marginEnd="8dp" android:text="4" android:gravity="center" />

            <Button android:id="@+id/btn5" style="@style/NumberButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:layout_marginEnd="8dp" android:text="5" android:gravity="center" />

            <Button android:id="@+id/btn6" style="@style/NumberButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:layout_marginEnd="8dp" android:text="6" android:gravity="center" />

            <Button android:id="@+id/btnSubtract" style="@style/OperatorButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:text="−" android:textSize="32sp" android:gravity="center" />
        </LinearLayout>

        <!-- Row 4: 1 2 3 + -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button android:id="@+id/btn1" style="@style/NumberButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:layout_marginEnd="8dp" android:text="1" android:gravity="center" />

            <Button android:id="@+id/btn2" style="@style/NumberButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:layout_marginEnd="8dp" android:text="2" android:gravity="center" />

            <Button android:id="@+id/btn3" style="@style/NumberButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:layout_marginEnd="8dp" android:text="3" android:gravity="center" />

            <Button android:id="@+id/btnAdd" style="@style/OperatorButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:text="+" android:textSize="32sp" android:gravity="center" />
        </LinearLayout>

        <!-- Row 5: 00 0 . = -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button android:id="@+id/btn00" style="@style/NumberButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:layout_marginEnd="8dp" android:text="00" android:gravity="center" />

            <Button android:id="@+id/btn0" style="@style/NumberButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:layout_marginEnd="8dp" android:text="0" android:gravity="center" />

            <Button android:id="@+id/btnDecimal" style="@style/NumberButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:layout_marginEnd="8dp" android:text="." android:textSize="32sp" android:gravity="center" />

            <Button android:id="@+id/btnEquals" style="@style/EqualsButton"
                android:layout_width="0dp" android:layout_height="72dp" android:layout_weight="1"
                android:text="=" android:textSize="32sp" android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
